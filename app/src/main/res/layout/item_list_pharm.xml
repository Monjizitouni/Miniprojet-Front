<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:backgroundTint="#41000000"
    android:paddingTop="8dp"
    app:cardCornerRadius="20dp"


    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@drawable/bordershape"


        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/pharmpic"
                android:layout_width="76dp"
                android:layout_height="61dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/btn4"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundCorner"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/pharmename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Pharmacie Gtari"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/pharmlocation"
                app:layout_constraintStart_toEndOf="@+id/pharmpic"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pharmlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="176dp"
                android:text="Ariana"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pharmpic"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/info"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/chat"
                app:layout_constraintStart_toEndOf="@+id/pharmename"
                app:srcCompat="@drawable/_89664" />

            <ImageView
                android:id="@+id/chat"
                android:layout_width="37dp"
                android:layout_height="36dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/info"
                app:srcCompat="@drawable/circle_icons_mail_svg" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            android:background="@color/underline"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            tools:layout_editor_absoluteX="18dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>